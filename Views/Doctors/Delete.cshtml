    ViewData["Title"] = "Delete";
}

<h1>Delete Doctors</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Doctor Occupation
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorType)
        </dd>
        <dt class = "col-sm-2">
            Doctor Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>
        <dt class = "col-sm-2">
            Institution
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorInstitution)
